<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org/DTD config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
 	<typeAliases>
 		<typeAlias type="com.icia.pboard.entity.User" alias="user" />
 		<typeAlias type="com.icia.pboard.entity.Board" alias="board" />
 	</typeAliases>
 	<!-- enum은 mybatis에서 지정안해주면 varchar로 저장되므로 number로 저장하라고 typehandler로 지정한다. -->
 	<typeHandlers>
		<typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler" javaType="com.icia.pboard.entity.Level" />
	</typeHandlers>
</configuration>

